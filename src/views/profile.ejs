<!DOCTYPE html>
<html lang="en">

<head>
    <title>BookSaw - Your Profile</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="format-detection" content="telephone=no">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="author" content="">
    <meta name="keywords" content="">
    <meta name="description" content="">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">

    <link rel="stylesheet" type="text/css" href="css/normalize.css">
    <link rel="stylesheet" type="text/css" href="icomoon/icomoon.css">
    <link rel="stylesheet" type="text/css" href="css/vendor.css">
    <link rel="stylesheet" type="text/css" href="style.css">
    <link rel="stylesheet" type="text/css" href="css/cart_style.css">

    <style>
        .profile-section {
            padding: 50px 0;
            background-color: #f9f9f9;
        }

        .profile-container {
            max-width: 800px;
            margin: 0 auto;
            background: #fff;
            padding: 30px;
            border-radius: 5px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        }

        .profile-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
            padding-bottom: 20px;
            border-bottom: 1px solid #eee;
        }

        .profile-title {
            margin-bottom: 0;
        }

        .profile-image {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            object-fit: cover;
            margin-bottom: 20px;
        }

        .info-group {
            margin-bottom: 20px;
        }

        .info-label {
            font-weight: 500;
            color: #777;
            margin-bottom: 5px;
            display: block;
        }

        .info-value {
            font-size: 1.1rem;
            padding: 10px;
            background: #f8f9fa;
            border-radius: 4px;
            border: 1px solid #eee;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-label {
            font-weight: 500;
            margin-bottom: 8px;
            display: block;
        }

        .form-control {
            width: 100%;
            padding: 10px 15px;
            border: 1px solid #ddd;
            border-radius: 4px;
            transition: border-color 0.3s;
        }

        .form-control:focus {
            border-color: #fb9678;
            outline: none;
        }

        .btn-update {
            background: #fb9678;
            color: white;
            border: none;
            padding: 12px 25px;
            border-radius: 4px;
            cursor: pointer;
            font-weight: 500;
            transition: background 0.3s;
        }

        .btn-update:hover {
            background: #f37e5c;
        }

        .profile-actions {
            display: flex;
            justify-content: space-between;
            margin-top: 30px;
        }

        .switch-label {
            position: relative;
            display: inline-block;
            width: 60px;
            height: 34px;
        }

        .switch-label input {
            opacity: 0;
            width: 0;
            height: 0;
        }

        .slider {
            position: absolute;
            cursor: pointer;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: #ccc;
            transition: .4s;
            border-radius: 34px;
        }

        .slider:before {
            position: absolute;
            content: "";
            height: 26px;
            width: 26px;
            left: 4px;
            bottom: 4px;
            background-color: white;
            transition: .4s;
            border-radius: 50%;
        }

        input:checked + .slider {
            background-color: #fb9678;
        }

        input:checked + .slider:before {
            transform: translateX(26px);
        }

        .switch-container {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .order-history {
            margin-top: 40px;
            padding-top: 30px;
            border-top: 1px solid #eee;
        }

        .order-history h3 {
            margin-bottom: 20px;
        }

        .order-table {
            width: 100%;
            border-collapse: collapse;
        }

        .order-table th,
        .order-table td {
            padding: 12px 15px;
            text-align: left;
            border-bottom: 1px solid #eee;
        }

        .order-table th {
            background-color: #f8f9fa;
            font-weight: 500;
        }

        .badge {
            padding: 5px 10px;
            border-radius: 4px;
            font-size: 0.8rem;
            font-weight: 500;
        }

        .badge-delivered {
            background-color: #d1f7c4;
            color: #2e7b32;
        }

        .badge-processing {
            background-color: #ffecb3;
            color: #e65100;
        }

        .badge-shipped {
            background-color: #bbdefb;
            color: #0d47a1;
        }
    </style>
</head>

<body>
    <%- include('partials/header') %>

    <section class="profile-section">
        <div class="container">
            <div class="profile-container">
                <div class="profile-header">
                    <h2 class="profile-title">Your Profile</h2>
                    <div class="switch-container">
                        <span id="view-mode-text">View Mode</span>
                        <label class="switch-label">
                            <input type="checkbox" id="profile-toggle">
                            <span class="slider"></span>
                        </label>
                        <span id="edit-mode-text">Edit Mode</span>
                    </div>
                </div>

                <!-- View Profile Section -->
                <div id="view-profile">
                    <div class="row">
                        <div class="col-md-4 text-center">
                            <img src="images/user-placeholder.jpg" alt="Profile Picture" class="profile-image">
                        </div>
                        <div class="col-md-8">
                            <div class="info-group">
                                <span class="info-label">Name</span>
                                <div class="info-value"><%= customer.name %></div>
                            </div>

                            <div class="info-group">
                                <span class="info-label">Email</span>
                                <div class="info-value"><%= customer.email %></div>
                            </div>

                            <div class="info-group">
                                <span class="info-label">Phone</span>
                                <div class="info-value"><%= customer.phone || 'Not provided' %></div>
                            </div>

                            <div class="info-group">
                                <span class="info-label">Address</span>
                                <div class="info-value"><%= customer.address || 'Not provided' %></div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Edit Profile Section -->
                <div id="edit-profile" style="display: none;">
                    <form action="/edit-profile" method="POST">
                        <div class="row">
                            <div class="col-md-4 text-center">
                                <img src="images/user-placeholder.jpg" alt="Profile Picture" class="profile-image">
                                <div class="mb-3">
                                    <label for="profile-picture" class="form-label">Change Profile Picture</label>
                                    <input type="file" id="profile-picture" name="profile_picture" class="form-control" disabled>
                                    <small class="text-muted">Feature coming soon</small>
                                </div>
                            </div>
                            <div class="col-md-8">
                                <div class="form-group">
                                    <label for="name" class="form-label">Name</label>
                                    <input type="text" id="name" name="name" class="form-control" value="<%= customer.name %>" required>
                                </div>

                                <div class="form-group">
                                    <label for="email" class="form-label">Email Address</label>
                                    <input type="email" id="email" name="email" class="form-control" value="<%= customer.email %>" required>
                                </div>

                                <div class="form-group">
                                    <label for="phone" class="form-label">Phone Number</label>
                                    <input type="tel" id="phone" name="phone" class="form-control" value="<%= customer.phone || '' %>">
                                </div>

                                <div class="form-group">
                                    <label for="address" class="form-label">Address</label>
                                    <textarea id="address" name="address" class="form-control" rows="3"><%= customer.address || '' %></textarea>
                                </div>

                                <button type="submit" class="btn-update">Update Profile</button>
                            </div>
                        </div>
                    </form>
                </div>

                <!-- Order History Section -->
                <% if (typeof orders !== 'undefined' && orders.length > 0) { %>
                <div class="order-history">
                    <h3>Order History</h3>
                    <table class="order-table">
                        <thead>
                            <tr>
                                <th>Order ID</th>
                                <th>Date</th>
                                <th>Total Amount</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% orders.forEach(function(order) { %>
                            <tr>
                                <td>#<%= order.order_id %></td>
                                <td><%= new Date(order.order_date).toLocaleDateString() %></td>
                                <td>$<%= order.total_amount.toFixed(2) %></td>
                                <td>
                                    <% if(order.status === 'Delivered') { %>
                                    <span class="badge badge-delivered">Delivered</span>
                                    <% } else if(order.status === 'Processing') { %>
                                    <span class="badge badge-processing">Processing</span>
                                    <% } else if(order.status === 'Shipped') { %>
                                    <span class="badge badge-shipped">Shipped</span>
                                    <% } else { %>
                                    <span class="badge"><%= order.status %></span>
                                    <% } %>
                                </td>
                                <td>
                                    <a href="/order/<%= order.order_id %>" class="btn btn-sm">View</a>
                                </td>
                            </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
                <% } %>

                <div class="profile-actions">
                    <a href="/homepage" class="btn">Back to Homepage</a>
                    <a href="/logout" class="btn-update" style="text-decoration:none;">Logout</a>
                </div>
            </div>
        </div>
    </section>

    <%- include('partials/footer') %>

    <script src="js/jquery-1.11.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
        crossorigin="anonymous"></script>
    <script src="js/plugins.js"></script>
    <script src="js/script.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const profileToggle = document.getElementById('profile-toggle');
            const viewProfile = document.getElementById('view-profile');
            const editProfile = document.getElementById('edit-profile');
            const viewModeText = document.getElementById('view-mode-text');
            const editModeText = document.getElementById('edit-mode-text');

            // Toggle between view and edit mode
            profileToggle.addEventListener('change', function() {
                if (this.checked) {
                    viewProfile.style.display = 'none';
                    editProfile.style.display = 'block';
                    viewModeText.style.color = '#777';
                    editModeText.style.color = '#fb9678';
                } else {
                    viewProfile.style.display = 'block';
                    editProfile.style.display = 'none';
                    viewModeText.style.color = '#fb9678';
                    editModeText.style.color = '#777';
                }
            });

            // Initialize view mode
            viewModeText.style.color = '#fb9678';
            editModeText.style.color = '#777';
        });
    </script>
</body>

</html>